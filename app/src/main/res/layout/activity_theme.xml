<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Theme">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bar_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="259dp"
            android:layout_height="45dp"
            android:src="@drawable/theme_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/back_key"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.509" />

        <ImageView
            android:id="@+id/back_key"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/dark_board"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/dark_board"
        app:layout_constraintEnd_toStartOf="@+id/white_board"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_theme" />


    <ImageView
        android:id="@+id/white_board"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toEndOf="@+id/dark_board"
        app:layout_constraintTop_toBottomOf="@+id/default_theme" />

    <TextView
        android:id="@+id/default_theme"
        android:layout_width="156dp"
        android:layout_height="39dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="255dp"
        android:layout_marginRight="255dp"
        android:background="@drawable/bar_name"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:text="Default Theme"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/custom_theme"
        android:layout_width="156dp"
        android:layout_height="39dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="255dp"
        android:layout_marginRight="255dp"
        android:background="@drawable/bar_name"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:text="Custom Theme"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_theme"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/custom"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/blue_board"
        app:layout_constraintEnd_toStartOf="@+id/purple"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_theme" />

    <ImageView
        android:id="@+id/purple"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/purple_board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/custom"
        app:layout_constraintTop_toBottomOf="@+id/custom_theme" />

    <ImageView
        android:id="@+id/red_board"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/red_board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/orange"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_theme"
        app:layout_constraintVertical_bias="0.596" />

    <ImageView
        android:id="@+id/orange"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/red_board"
        app:layout_constraintTop_toBottomOf="@+id/custom_theme"
        app:layout_constraintVertical_bias="0.596" />
</androidx.constraintlayout.widget.ConstraintLayout>
